@using Blogaj.WebUI.DTOs.AboutDtos
@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Hakkımda Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim 1</th>
            <th>Resim 2</th>
            <th>Açıklama</th>
            <th>Madde 1</th>
            <th>Madde 2</th>
            <th>Madde 3</th>
            <th>Madde 4</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>
                    <img src="@item.ImageUrl1" style="height:75px;width:75px" />
                </td>
                <td>
                    <img src="@item.ImageUrl2" style="height:75px;width:75px" />
                </td>
                <td>@item.Description</td>
                <td>@item.Item1</td>
                <td>@item.Item2</td>
                <td>@item.Item3</td>
                <td>@item.Item4</td>
                <td>
                    <a asp-action="UpdateAbout"
                       asp-controller="About"
                       asp-area="Admin"
                       class="btn btn-outline-info btn-sm">
                        Güncelle
                    </a>
                    <a asp-action="DeleteAbout"
                       asp-controller="About"
                       asp-area="Admin"
                       class="btn btn-outline-danger btn-sm">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />

<a asp-action="CreateAbout"
   asp-controller="About"
   asp-area="Admin"
   class="btn btn-outline-primary">
    Yeni Hakkımda Ekle
</a>
